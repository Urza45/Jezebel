{% extends 'base.html.twig' %}

{% block title %}Norme index
{% endblock %}

{% block body %}
	<section class="bg-secondary p-2 bg-opacity-25">
		<h1>Liste des normes</h1>
			<a href="{{ path('app_norme_new') }}">Cr√©er une nouvelle norme</a>
		<table>
			<thead>
				<tr>
					<th>Id</th>
					<th>Label</th>
					<th>Comments</th>
					<th>Picture</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for norme in normes %}
					<tr>
						<td>{{ norme.id }}</td>
						<td>{{ norme.label }}</td>
						<td>{{ norme.comments }}</td>
						<td>{{ norme.picture }}</td>
						<td>
							<a href="{{ path('app_norme_show', {'id': norme.id}) }}">
								<i class="fa-regular fa-eye"></i>
							</a>
							<a href="{{ path('app_norme_edit', {'id': norme.id}) }}">
								<i class="fa-solid fa-file-pen"></i>
							</a>
							<a href="{{ path('app_norme_list_categories', {'id': norme.id}) }}">
								<i class="fa-solid fa-folder-tree"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		
	</section>
{% endblock %}
