{% extends 'base.html.twig' %}

{% block title %}Liste des normes
{% endblock %}

{% block body %}

	<h1>Liste des normes</h1>
	<a href="{{ path('app_norme_new') }}">Créer une nouvelle norme</a>
	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Commentaire</th>
				<th>Photo</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for norme in normes %}
				<tr>
					<td>{{ norme.id }}</td>
					<td>{{ norme.label }}</td>
					<td>{{ norme.comments }}</td>
					<td>{{ norme.picture }}</td>
					<td>
						<a href="{{ path('app_norme_show', {'id': norme.id}) }}">
							<i class="fa-regular fa-eye"></i>
						</a>
						<a href="{{ path('app_norme_edit', {'id': norme.id}) }}">
							<i class="fa-solid fa-file-pen"></i>
						</a>
						<a href="{{ path('app_norme_list_categories', {'id': norme.id}) }}">
							<i class="fa-solid fa-folder-tree"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Pas d'enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
