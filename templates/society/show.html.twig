{% extends 'base.html.twig' %}

{% block title %}Society
{% endblock %}

{% block body %}
	<section class="bg-secondary p-2 bg-opacity-25">
		<h1>Society</h1>

		<table>
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ society.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ society.name }}</td>
				</tr>
				<tr>
					<th>Address</th>
					<td>{{ society.address }}</td>
				</tr>
				<tr>
					<th>Cp</th>
					<td>{{ society.cp }}</td>
				</tr>
				<tr>
					<th>Town</th>
					<td>{{ society.town }}</td>
				</tr>
				<tr>
					<th>Logo</th>
