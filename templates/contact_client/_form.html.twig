<div class="container container-fluid">
	<div class="row justify-content-evenly">
		<div class="col-lg-12">
			{{ form_start(form) }}
			{# {{ form_widget(form) }} #}
			<div class="form-group">
				<div class="row justify-content-evenly">
					<div class="col-lg-4 col-12">
						{{ form_row(form.nom, {'label': 'Nom du contact (*) :', 'attr' : {'placeholder': 'Nom du contact', 'class': 'form-control' } })}}
					</div>
					<div class="col-lg-4 col-12">
						{{ form_row(form.prenom, {'label': 'Prénom du contact (*) :', 'attr' : {'placeholder': 'Prénom du contact', 'class': 'form-control' } })}}
					</div>
				</div>
				<div class="row justify-content-evenly">
					<div class="col-lg-12">
						{{ form_row(form.adresse, {'label': 'Adresse :', 'attr' : {'placeholder': 'Adresse', 'class': 'form-control' } })}}
					</div>
				</div>
				<div class="row justify-content-evenly">
					<div class="col-lg-12">
						{{ form_row(form.adresse2, {'label': 'Complément d\'adresse :', 'attr' : {'placeholder': 'Complément d\'adresse', 'class': 'form-control' } })}}
					</div>
				</div>
                <div class="row justify-content-evenly">
                    <div class="col-lg-4 col-12">
						{{ form_row(form.codePostal, {'label': 'Code postal :', 'attr' : {   'placeholder': 'Code postal', 'class': 'form-control'} })}}
					</div>
                    <div class="col-lg-4 col-12">
						{{ form_row(form.ville, {'label': 'Ville :', 'attr' : {   'placeholder': 'Ville', 'class': 'form-control'} })}}
					</div>
                </div>
                <div class="row justify-content-evenly">
                    <div class="col-lg-4 col-12">
						{{ form_row(form.telephone1, {'label': 'Téléphone 1 (*) :', 'attr' : {   'placeholder': 'Téléphone 2', 'class': 'form-control'} })}}
					</div>
                    <div class="col-lg-4 col-12">
						{{ form_row(form.telephone2, {'label': 'Téléphone 2 (*) :', 'attr' : {   'placeholder': 'Téléphone 2', 'class': 'form-control'} })}}
					</div>
                </div>
				<div class="row justify-content-evenly">
                    <div class="col-lg-4 col-12">
						{{ form_row(form.email, {'label': 'Email (*) :', 'attr' : {   'placeholder': 'Client', 'class': 'form-control'} })}}
					</div>
					<div class="col-lg-4 col-12">
						{{ form_row(form.client, {'label': 'Client (*) :', 'attr' : {   'placeholder': 'Client', 'class': 'form-select'} })}}
					</div>
				</div>
			</div>


			<div class="form-group"></div>
			<button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
			{{ form_end(form) }}
		</div>
	</div>
</div>
