{% if is_granted('ROLE_ULTRAADMIN') %}
	<form method="post" action="{{ path('app_admin_delete', {'id': admin.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ admin.id) }}">
		<button class="btn btn-danger">Effacer cet utilisateur</button>
	</form>
{% endif %}
