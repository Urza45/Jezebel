{% extends 'base.html.twig' %}

{% block title %}Consigne index{% endblock %}

{% block body %}
    <h1>Consigne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Point</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consigne in consignes %}
            <tr>
                <td>{{ consigne.id }}</td>
                <td>{{ consigne.point }}</td>
                <td>{{ consigne.label }}</td>
                <td>
                    <a href="{{ path('app_consigne_show', {'id': consigne.id}) }}">show</a>
                    <a href="{{ path('app_consigne_edit', {'id': consigne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_consigne_new') }}">Create new</a>
{% endblock %}
