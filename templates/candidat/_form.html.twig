<div class="container container-fluid">
	<div class="row justify-content-evenly">
		<div
			class="col-lg-12">
			{# {{ form(form2) }} #}
			{% if form2 is defined %}
				{{ form_start(form2) }}
				<div class="form-group">
					<div class="row justify-content-evenly">
						<div class="col-lg-4 col-12">
							{{ form_row(form2.nomCandidat, {'label': 'Nom (*) :', 'attr' : {'placeholder': 'Nom du candidat', 'class': 'form-control' } })}}
						</div>
						<div class="col-lg-4 col-12">
							{{ form_row(form2.prenomCandidat, {'label': 'Prénom (*) :', 'attr' : { 'placeholder': 'Prénom du candidat', 'class': 'form-control'} })}}
						</div>
						<div class="col-lg-4 col-12">
							{{ form_row(form2.dateNaissance, {'label': 'Date de naissance :', 'attr' : {'class': 'form-control' }})}}
						</div>
					</div>
				</div>
				<hr/>
				<div class="form-group">
					<div class="row justify-content-evenly">
						<div class="col-lg-4 col-12">
							{{ form_row(form2.type, {'label': 'Catégories :', 'attr' : {'class': 'form-check form-check-inline' }})}}
						</div>
					</div>
				</div>
				<hr/>
				<button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
				{{ form_end(form2) }}
			{% endif %}
			<hr/>
			{% if form is defined %}
				{{ form_start(form) }}
				{#{ form_widget(form) }#}
				<div class="form-group">
					<div class="row justify-content-evenly">
						<div class="col-lg-4 col-12">
							{{ form_row(form.nomCandidat, {'label': 'Nom (*) :', 'attr' : {'placeholder': 'Nom du candidat', 'class': 'form-control' } })}}
							{{ form_row(form.dateTheorique, {'label': 'Date du test théorique :', 'attr' : {'class': 'form-control' }})}}
						</div>
						<div class="col-lg-4 col-12">
							{{ form_row(form.prenomCandidat, {'label': 'Prénom (*) :', 'attr' : { 'placeholder': 'Prénom du candidat', 'class': 'form-control'} })}}
							{{ form_row(form.datePratique, {'label': 'Date du test pratique :', 'attr' : {'class': 'form-control' }})}}
						</div>
						<div class="col-lg-4 col-12">
							{{ form_row(form.dateNaissance, {'label': 'Date de naissance :', 'attr' : {'class': 'form-control' }})}}
							{{ form_row(form.idStatus, {'label': 'Status :', 'attr' : {'class': 'form-select' }})}}
						</div>
					</div>
					<br/>
					<div class="form-group">
						EXPERIENCE A LA CONDUITE DES CATEGORIES CONCERNEES
						<div class="row justify-content-evenly">
							<div class="col-lg-4 col-12">
								{{ form_row(form.idNiveauCompetence, {'label': 'Niveau de compétence (*) :', 'attr' : {  'placeholder': 'Prénom du candidat', 'class': 'form-select'}})}}
							</div>
							<div class="col-lg-4 col-12">
								{{ form_row(form.experienceProduction, {'label': 'Expérience en production (Année) :', 'attr' : {  'placeholder': 'Prénom du candidat', 'class': 'form-select'}})}}
								{{ form_row(form.dureeExperience, {'label': 'Durée (*) :', 'attr' : { 'class': 'form-control'}})}}
							</div>
							<div class="col-lg-4 col-12">
								{{ form_row(form.formationRecue, {'label': 'Formation reçue (*) :', 'attr' : { 'class': 'form-select'}})}}
								{{ form_row(form.heureFormation, {'label': 'Durée (Heurre) :', 'attr' : { 'class': 'form-control'}})}}
							</div>
						</div>
					</div>
					<br/>
					<div class="form-group">
						REFERENCES
						<div class="row justify-content-evenly">
							<div class="col-lg-4 col-12">
								{{ form_row(form.idDossier, {'label': 'Dossier (*) :', 'attr' : {  'placeholder': 'Dossier', 'class': 'form-select'}})}}
							</div>
							<div class="col-lg-4 col-12">
								{{ form_row(form.idClient, {'label': 'Client :', 'attr' : {  'placeholder': 'Client', 'class': 'form-select'}})}}
							</div>
							<div class="col-lg-4 col-12">
								{{ form_row(form.noteFormation, {'label': 'Note test théorique (*) :', 'attr' : { 'class': 'form-select'}})}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
		{{ form_end(form) }}
	{% endif %}
</div>
