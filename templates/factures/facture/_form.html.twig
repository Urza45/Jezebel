</div>

{% macro niceForm(form) %}
	<div class="row justify-content-evenly">
		<div class="col-lg-4">
			{{ form_widget(form.description, {'attr' : { 'class': 'form-control'} }) }}
		</div>
		<div class="col-lg-2">{{ form_widget(form.quantite, {'attr' : { 'class': 'form-control'} }) }}</div>
		<div class="col-lg-2">{{ form_widget(form.tva, {'attr' : { 'class': 'form-select'} }) }}</div>
		<div class="col-lg-2">{{ form_widget(form.prix, {'attr' : { 'class': 'form-control'} }) }}</div>
		<div id="bt_suppr" class="col-lg-1"></div>
	</div>
{% endmacro %}

{% import _self as formMacro %}

<fieldset>
	<legend>Nouvelle prestation :</legend>

	<div id="lignes" class="" data-prototype="{{ formMacro.niceForm(form.lignes.vars.prototype)|e('html_attr') }}">
		<div class="inline">
			{{ form_widget(form.lignes) }}
			<span></span>
		</div>
	</div>
</fieldset>


