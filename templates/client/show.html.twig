{% extends 'base.html.twig' %}

{% block title %}Client
{% endblock %}

{% block body %}
	<section class="bg-secondary p-2 bg-opacity-25">
		<h1>Société
			{{ client.nomClient|upper }}
			<a href="{{ path('app_client_edit', {'id': client.id}) }}">
				<i class="fa-solid fa-pen-to-square"></i>
			</a>
		</h1>

		<table>
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ client.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ client.nomClient }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ client.adresseClient }}</td>
				</tr>
				<tr>
					<th>CP</th>
					<td>{{ client.cpClient }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ client.villeClient }}</td>
				</tr>
				<tr>
					<th>Codeagence</th>
					<td>{{ client.codeagence }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_client_index') }}">Retour à la liste des sociétés</a>

		{{ include('client/_delete_form.html.twig') }}
	</section>
{% endblock %}
