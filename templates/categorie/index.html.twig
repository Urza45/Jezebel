{% extends 'base.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}
	<section class="bg-secondary p-2 bg-opacity-25">
		<h1>Norme
			{{ norme.label }}</h1>
		<h2>Liste des catégories</h2>
		<a href="{{ path('app_norme_add_categorie', {'id': norme.id}) }}">Ajouter une nouvelle catégorie</a>
		<table>
			<thead>
				<tr>
					<th>Id</th>
					<th>Label</th>
					<th>Comments</th>
					<th>Picture</th>
					<th>LabelCourt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>
						<td>{{ categorie.id }}</td>
						<td>{{ categorie.label }}</td>
						<td>{{ categorie.comments }}</td>
						<td>{{ categorie.picture }}</td>
						<td>{{ categorie.labelCourt }}</td>
						<td>
							<a href="{{ path('app_categorie_show', {'idnorme': norme.id, 'id': categorie.id }) }}">
								<i class="fa-regular fa-eye"></i>
							</a>
							<a href="{{ path('app_categorie_edit', {'idnorme': norme.id, 'id': categorie.id }) }}">
								<i class="fa-solid fa-file-pen"></i>
							</a>
							<a href="{{ path('app_categorie_list_themes', {'idnorme': norme.id, 'id': categorie.id }) }}">
								<i class="fa-solid fa-folder-tree"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Pas d'enregistrement trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_norme_index') }}">Retour à la liste des normes</a>
	</section>
{% endblock %}
